<%# Locals expected:
  articlePreview,
%>

<div class="row article-preview">
  <div class="col-md-8 col-md-offset-2">
    <a href="<%= articlePreview.url %>"><img src="<%= articlePreview.thumbnail %>" class="article-preview-img" /></a>
    <a href="<%= articlePreview.url %>">
      <h2 class="article-preview-title"><%= articlePreview.title %></h2>
      <p class="article-preview-time"><%= `${new Date(articlePreview.time).toDateString()} at ${new Date(articlePreview.time).toTimeString()}` %></p>
      <h4 class="article-preview-byline"><%= articlePreview.byline %></h4>
    </a>
  </div>
</div>
